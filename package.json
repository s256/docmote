    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^35.0.3",
    "electron-builder": "^24.6.0",
    "vite": "^6.2.2"
  },
  "build": {
    "appId": "com.charles.docmote",
    "files": [
      "dist/**/*",
